<%= form_for(@attraction) do |f| %>
  <% if @attraction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attraction.errors.count, "error") %> prohibited this attraction from being saved:</h2>

      <ul>
      <% @attraction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label "Name" %><br>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label "Height Requirement (in inches)" %><br>
    <%= f.text_field :min_height %>
  </div>
  
  <div class="field">
    <%= f.label "How fun is it?(1-5 scale)" %><br>
    <%= f.number_field :happiness_rating %>
  </div>
  
  <div class="field">
    <%= f.label "How nausea-inducing is it?(1-5 scale)" %><br>
    <%= f.number_field :nausea_rating %>
  </div>
  
  
  <div class="field">
    <%= f.label "How many tickets does it cost?" %><br>
    <%= f.number_field :tickets %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

