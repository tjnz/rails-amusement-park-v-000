<div class="center">
	<div class="pic">
		<img src="http://www.allthingsclipart.com/05/amusement.park.05.jpg" height="250">
	</div>
	
	<div class="info">
		<p><strong>Name: </strong><%= attraction.name %></p>
		<p><strong>Total Number of Users: </strong><%= attraction.num_users %></p>
		<p><strong>Ticket Requirement: </strong><%= attraction.tickets %></p>
		<p><strong>Nausea Rating: </strong><%= attraction.nausea_rating %></p>
		<p><strong>Happiness Rating: </strong><%= attraction.happiness_rating %></p>

		
		<% if current_user.admin %>
			<%= link_to 'Edit Attraction', edit_attraction_path(attraction) %>
		<% else %>
			<%= form_tag(rides_create_path, method: :post)do %>
				<%= hidden_field_tag 'user_id', current_user.id %>
				<%= hidden_field_tag 'attraction_name', attraction.name %>
				<%= hidden_field_tag 'attraction_id', attraction.id %>
				<%= submit_tag "Go on this ride" %>
			<% end %>
		<% end %>
		
		<br><br>
		<p><%= link_to 'Back', attractions_path %></p>
		
		
	</div>
</div>