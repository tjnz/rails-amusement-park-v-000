<% if current_user %>
	<li>
		<%= link_to "Hello, #{current_user.name}!", user_path(@current_user) %>
	</li>
	
	<li>
		<%= link_to "Attractions", attractions_path %>
	</li>
	
	<li>
		<%= link_to "Log Out", logout_path, method: :delete %>
	</li>

<% else %>
	<li>
		<%= link_to "Sign Up", signup_path %>
	</li>
	
	<li>
		<%= link_to "Sign In", login_path %>
	</li>
<% end %>
